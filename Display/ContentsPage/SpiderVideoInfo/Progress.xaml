<Page x:Class="Display.ContentsPage.SpiderVideoInfo.Progress"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:sys="using:System"
      xmlns:local="using:Display.ContentsPage.SpiderVideoInfo"
      xmlns:data="using:Data"
      xmlns:lvc="using:LiveChartsCore.SkiaSharpView.WinUI"
      xmlns:control="using:Display.Control"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <Style TargetType="Grid"
               x:Key="GridWithBrush">
            <Setter Property="BorderBrush"
                    Value="{StaticResource ControlElevationBorderBrush}" />
            <Setter Property="BorderThickness"
                    Value="1" />
            <Setter Property="Margin"
                    Value="2" />
            <Setter Property="Padding"
                    Value="2" />
            <Setter Property="CornerRadius"
                    Value="5" />
        </Style>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="10,0" Spacing="5">

            <!--进度条-->
            <ProgressRing x:Name="TopProgressRing" Width="10" Height="10"/>
            
            <TextBlock x:Name="TotalProgress_TextBlock"
                       Text="正在统计文件夹中的视频数量……"
                       VerticalAlignment="Center"
                       FontSize="15"/>
        </StackPanel>

        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="200" />
                <RowDefinition Height="auto" />
                <RowDefinition MaxHeight="400"
                               MinHeight="200" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="2*" />
            </Grid.ColumnDefinitions>

            <!--选中的文件夹-->
            <Grid Grid.ColumnSpan="2" Style="{StaticResource GridWithBrush}">

                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <TextBlock Text="{x:Bind sys:String.Format('选中的文件夹数量：{0}',folderNameList.Count)}" />

                <ListView Grid.Row="1"
                          ItemsSource="{x:Bind folderNameList}"
                          SelectionMode="None">
                    <ListView.ItemTemplate>
                        <DataTemplate x:DataType="x:String">
                            <TextBlock Text="{x:Bind }" />
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>

            <!--文件类型数量分析-->
            <Grid Style="{StaticResource GridWithBrush}"
                  Grid.Column="2">
                <StackPanel x:Name="FileInfoPieChart"
                            Visibility="Collapsed"
                            Padding="0,5,0,0">
                    <TextBlock Text="文件数量占比" />
                    <lvc:PieChart x:Name="CountPercentPieChart"
                                  LegendPosition="Right"
                                  LegendBackground="{ThemeResource ApplicationPageBackgroundThemeBrush}" />
                </StackPanel>
            </Grid>

            <Grid Grid.Row="2"
                  x:Name="SpiderInfo_Grid"
                  Style="{StaticResource GridWithBrush}">
                <GridView x:Name="SpiderInfo_GridView" SelectionMode="None">
                    <GridView.ItemContainerStyle>
                        <Style TargetType="GridViewItem">
                            <Setter Property="Margin"
                                    Value="5, 5, 5, 5" />
                        </Style>
                    </GridView.ItemContainerStyle>

                    <GridView.ItemTemplate>
                        <DataTemplate x:DataType="data:SpiderInfo">
                            <Grid Width="100" Height="80">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="auto" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>
                                
                                <RelativePanel Padding="5,0">
                                    <TextBlock Text="{x:Bind SpiderSource}" />
                                    <Ellipse Width="10"
                                             Height="10"
                                             Fill="{x:Bind EllipseColor,Mode=OneWay}"
                                             RelativePanel.AlignRightWithPanel="True"
                                             RelativePanel.AlignVerticalCenterWithPanel="True"
                                             Visibility="{x:Bind EllipseVisiable}"/>
                                </RelativePanel>
                                
                                <Grid Grid.Row="1"
                                      BorderBrush="{StaticResource CardStrokeColorDefault}" BorderThickness="1" CornerRadius="5"
                                      Padding="5">
                                    <TextBlock Text="{x:Bind Message,Mode=OneWay}" TextWrapping="WrapWholeWords"/>
                                </Grid>
                                
                            </Grid>
                        </DataTemplate>
                    </GridView.ItemTemplate>
                </GridView>
            </Grid>

            <Grid Style="{StaticResource GridWithBrush}"
                  Grid.Row="2"
                  Grid.Column="1"
                  Grid.ColumnSpan="2"
                  Visibility="{x:Bind CartesianChart.Visibility,Mode=OneWay}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <TextBlock Text="各搜刮源访问次数"
                           HorizontalAlignment="Right"
                           FontSize="13"
                           Opacity="0.5"/>
                <lvc:CartesianChart x:Name="CartesianChart"
                                    Grid.Row="1"
                                    Visibility="Collapsed"
                                    LegendPosition="Right"
                                    LegendBackground="{ThemeResource ApplicationPageBackgroundThemeBrush}">
                </lvc:CartesianChart>
            </Grid>

            <Grid Style="{StaticResource GridWithBrush}"
                  Grid.Row="1"
                  Grid.ColumnSpan="2"
                  RowSpacing="10"
                  Padding="5"
                  x:Name="CountInfo_Grid"
                  Visibility="Collapsed">
                <Grid.Resources>
                    <Style TargetType="TextBlock">
                        <Setter Property="FontSize"
                                Value="15" />
                    </Style>
                </Grid.Resources>
                
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>

                <!--<Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>-->

                <TextBlock Opacity="0.5" FontSize="14">
                    <Run>总视频数量:</Run>
                    <Run x:Name="AllVideoCount_Run">0</Run>
                </TextBlock>
                <TextBlock Grid.Row="1"
                           Opacity="0.5"
                           FontSize="14">
                    <Run>正则匹配成功的番号数量:</Run>
                    <Run x:Name="MatchCidCount_Run">0</Run>
                </TextBlock>
                <TextBlock Grid.Row="2"
                           Opacity="0.5"
                           FontSize="14">
                    <Run>番号搜刮成功数量:</Run>
                    <Run x:Name="CidSuccessCount_Run">0</Run>
                </TextBlock>
                <TextBlock Grid.Row="3">
                    <Run>正则匹配成功番号占:</Run>
                    <Run x:Name="FileNameSuccessRate_Run">100%</Run>
                </TextBlock>
                <TextBlock Grid.Row="4">
                    <Run>番号搜刮成功率:</Run>
                    <Run x:Name="CidSuccessRate_Run">100%</Run>
                </TextBlock>
            </Grid>

            <!--获取信息--><!--
