<Page x:Class="Display.ContentsPage.DetailInfo.SelectSingleSubFileToSelected"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:Display.ContentsPage.DetailInfo"
    xmlns:data="using:Data"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <StackPanel Spacing="5"
                HorizontalAlignment="Stretch">
        <TextBlock Text="查询到多个字幕文件，选择一项" />
        <ListView x:FieldModifier="public"
                  x:Name="ContentListView"
                  SelectionMode="None"
                  DataContext="{x:Bind trueName}"
                  ItemsSource="{x:Bind subInfoList}"
                  IsItemClickEnabled="True">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="data:SubInfo">
                    <TextBlock Text="{x:Bind name}"
                               TextWrapping="Wrap"/>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackPanel>
</Page>
