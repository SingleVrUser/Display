                            HorizontalAlignment="Left">
                            <StackPanel
                                x:Name="ActorSatckPanel"
                                Orientation="Horizontal">
                            </StackPanel>
                        </ScrollViewer>--><!--

                    </Grid>

                    
                </Grid>
                --><!--</StackPanel>--><!--
            </ScrollViewer>

            <Grid x:Name="SmokeGrid" Grid.RowSpan="2" Grid.ColumnSpan="2" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Visibility="Collapsed">
                <Grid x:Name="SmokeCancelGrid">
                    <Grid.Background>
                        <SolidColorBrush Color="{ThemeResource SystemChromeAltHighColor}" Opacity="0.8" />
                    </Grid.Background>
                </Grid>

                <Grid x:Name="destinationElement" HorizontalAlignment="Center" VerticalAlignment="Center" BorderThickness="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="auto" />
