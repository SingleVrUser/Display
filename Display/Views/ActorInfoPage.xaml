<Page
    x:Class="Display.Views.ActorInfoPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:control="using:Display.Control"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:data="using:Data"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel HorizontalAlignment="Center" Margin="10">
            <TextBlock x:Name="showNameTextBlock" Text="{x:Bind ShowName,Mode=OneWay}" FontSize="25" IsTextSelectionEnabled="True"/>
        </StackPanel>

        <control:VideoCoverDisplay
            Grid.Row="1"
            x:Name="videoControl"
            Click="{x:Bind OnClicked}"
            VideoPlayClick="{x:Bind VideoPlay_Click}"/>

    </Grid>
</Page>
