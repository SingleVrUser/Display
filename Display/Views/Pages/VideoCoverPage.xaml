<Page x:Class="Display.Views.Pages.VideoCoverPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:controls="using:Display.Controls"
      xmlns:userController="using:Display.Controls.UserController"
      mc:Ignorable="d">

    <Grid>
        <userController:VideoCoverDisplay x:Name="VideoControl"
            MoreButtonClick="OnClicked"
            VideoPlayClick="VideoPlay_Click"
            SingleVideoPlayClick="SingleVideoPlayClick"
            IsShowFailListView="False"
            IsShowSearchListView="True"/>
    </Grid>
</Page>
